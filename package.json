{
  "name": "gcstatus",
  "version": "1.0.0",
  "description": "Application to check game crack statuses",
  "main": "./src/main.tsx",
  "scripts": {
    "start": "concurrently \"npm:dev\" \"npm:storybook\"",
    "dev": "vite --open",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "format": "prettier --write ./src && echo 'Formatting complete! Include any changes on your commit.'",
    "lint": "eslint --fix ./src && echo 'Lint complete.'",
    "test:ci": "echo 'Test complete.'",
    "type-check": "tsc && echo 'Type check complete.'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "crack",
    "games",
    "status"
  ],
  "author": "Felipe Oliveira",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/lab": "^6.0.0-beta.8",
    "@mui/material": "^6.0.1",
    "@reduxjs/toolkit": "^2.2.7",
    "@vitejs/plugin-react": "^4.3.1",
    "date-fns": "^3.6.0",
    "nprogress": "^0.2.0",
    "react": "^18.3.1",
    "react-calendar": "^5.0.0",
    "react-countdown": "^2.3.6",
    "react-dom": "^18.3.1",
    "react-easy-crop": "^5.0.8",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.53.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.3.0",
    "react-redux": "^9.1.2",
    "react-responsive-carousel": "^3.2.23",
    "react-router-dom": "^6.26.1",
    "swiper": "^11.1.11"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@eslint/compat": "^1.1.1",
    "@faker-js/faker": "^8.4.1",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-themes": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@types/nprogress": "^0.2.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-slick": "^0.23.13",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.1.5",
    "netlify-cli": "^17.34.3",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "semantic-release": "^24.1.0",
    "storybook": "^8.2.9",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": false
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
